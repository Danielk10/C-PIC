<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CPIC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        
        <item name="android:textColorPrimary">@color/on_surface</item>
        
        <!-- Menu and Popup visibility fixes -->
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        
        <!-- Force dark background and white text for popups -->
        <item name="actionBarPopupTheme">@style/CustomPopupTheme</item>
        <item name="popupTheme">@style/CustomPopupTheme</item>
        <item name="windowPopupBackground">@color/surface</item>
    </style>

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="windowPopupBackground">@color/surface</item>
        <item name="android:itemBackground">@color/surface</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>